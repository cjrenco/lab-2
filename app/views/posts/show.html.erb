<div class="container">


  <article class="blog-post">
    <h2 class="display-5 link-body-emphasis mb-1"><%= @post.title %></h2>
    <p class="blog-post-meta"><%= @post.created_at %> by <%= @post.author %></p>

    <p><%= @post.content %></p>

  </article>
  <h2>Comments:</h2>
  <ul>
    <% @comments.each do |comment| %>
      <li><%= comment.content %> - <%= comment.author %></li>
    <% end %>
  </ul>
</div>